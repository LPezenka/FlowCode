<Window x:Class="FlowEditor.Windows.ProcessNodeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowEditor.Windows"
        mc:Ignorable="d"
        Title="ProcessNodeDetailWindow" SizeToContent="WidthAndHeight">
    <StackPanel>
        <StackPanel>
            <Label Content="Target Function" HorizontalAlignment="Right" Foreground="Gray"></Label>
            <TextBox x:Name="TargetName" Text="" TextChanged="TargetName_TextChanged"></TextBox>
            <Label Content="Known Predefined Processes" HorizontalAlignment="Right" Foreground="Gray"></Label>
            <ListBox x:Name="Functions" Height="60" MouseDoubleClick="Functions_MouseDoubleClick" SelectionChanged="Functions_SelectionChanged"></ListBox>
            <Label Content="Signature" HorizontalAlignment="Right" Foreground="Gray"></Label>
            <Label x:Name="Signature"></Label>
        </StackPanel>
        
        <StackPanel>
            <Label Content="New Variable" HorizontalAlignment="Right" Foreground="Gray"></Label>
            <DockPanel LastChildFill="True">
                <TextBox x:Name="NewVariable" Width="150" DockPanel.Dock="Left"></TextBox>
                <Button Content="Add" Click="Button_AddVariable_Click" DockPanel.Dock="Right"></Button>
            </DockPanel>
        <Label Content="Variables" HorizontalAlignment="Right" Foreground="Gray"></Label>
            <StackPanel Orientation="Horizontal">    
                <ListBox BorderBrush="Red" x:Name="RegisteredVariables"  Height="60" Width="150"></ListBox>
                <Button Content="Remove" Click="Button_RemoveVar_Click"></Button>
            </StackPanel>
        </StackPanel>

        <DockPanel LastChildFill="True">
            <Label Content="Call:" DockPanel.Dock="Left"></Label>
            <TextBox x:Name="Call" DockPanel.Dock="Right"></TextBox>
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Ok" Click="Button_Ok_Click"></Button>
            <Button Content="Cancel"></Button>
        </StackPanel>

    </StackPanel>
</Window>

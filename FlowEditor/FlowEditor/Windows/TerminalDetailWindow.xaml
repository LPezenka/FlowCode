<Window x:Class="FlowEditor.Windows.TerminalDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowEditor.Windows"
        mc:Ignorable="d"
        Title="TerminalDetailWindow"
        SizeToContent="WidthAndHeight">
    <Grid>
    <StackPanel>


        <StackPanel Orientation="Vertical">
        <Label Content="Function Name"></Label>
            <TextBox x:Name="FunctionName" Width="300"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 25 0 0">
            <StackPanel Orientation="Vertical">
                <Label Content="New In Parameter"></Label>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="NewInParam" Width="150"></TextBox>
                    <Button Content="+" Click="AddNewInParam"></Button>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <ListBox x:Name="InParams" Height="80" Width="150"></ListBox>
                <Button Content="Remove" ></Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="0 25 0 0" Orientation="Horizontal">
            <Button Content="Ok" Width="150" Click="Ok"></Button>
            <Button Content="Cancel" Width="150" Click="Cancel"></Button>
        </StackPanel>
    </StackPanel>
    </Grid>
</Window>

<Window x:Class="FlowEditor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowEditor"
        mc:Ignorable="d"
        Title="Settings" Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="General Settings" Grid.Row="0" Grid.Column="0"  Margin="10">
            <StackPanel Orientation="Vertical" Margin="10">
                <CheckBox x:Name="EnableCustomInput" Content="Enable Custom Input" Margin="5"/>
                <CheckBox x:Name="EnableCustomOutput" Content="Enable Custom Output" Margin="5"/>
                <Label Content="Process Delay in ms"></Label>
                    <Slider x:Name="Delay" Maximum="1000" Minimum="0" TickFrequency="1" ValueChanged="Delay_ValueChanged"></Slider>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Semantics" Grid.Row="0" Grid.Column="1"  Margin="10">
            <StackPanel Orientation="Vertical" Margin="10">
                <DockPanel>
                    <Label Content="Yes Keyword:" DockPanel.Dock="Left"></Label>
                    <TextBox x:Name="TextBoxYesKeyword" Text="Ja" Margin="5" HorizontalAlignment="Stretch" DockPanel.Dock="Right"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="No Keyword:" DockPanel.Dock="Left"></Label>
                    <TextBox x:Name="TextBoxNoKeyword" Text="Nein" Margin="5" HorizontalAlignment="Stretch" DockPanel.Dock="Right"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Input Keyword:" DockPanel.Dock="Left"></Label>
                    <TextBox x:Name="TextBoxInputKeyword" Text="Eingabe" Margin="5" HorizontalAlignment="Stretch" DockPanel.Dock="Right"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Output Keyword:" DockPanel.Dock="Left"></Label>
                    <TextBox  DockPanel.Dock="Right" x:Name="TextBoxOutputKeyword" Text="Ausgabe" Margin="5" HorizontalAlignment="Stretch"/>
                </DockPanel>

            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Right">
            <Button x:Name="CloseButton" Content="Close" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="CloseButton_Click"/>
            <Button x:Name="OkButton" Content="Apply" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="OkButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="SaveButton_Click"/>

        </StackPanel>

        <GroupBox Header="Style Settings" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" Margin="0,0,10,0">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Variable Box ARGB color"></Label>
                    <TextBlock Text="Format: #ARGB" Foreground="LightGray" Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Output Box ARGB color"></Label>
                    <TextBlock Text="Format: #ARGB" Foreground="LightGray" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>

    <Style TargetType="{x:Type fc:ProcessNode}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fc:ProcessNode}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Padding="0"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Linker Strich -->
                            <Rectangle Grid.Column="0"
                                   Fill="Black"
                                   Width="6"
                                   HorizontalAlignment="Stretch" />

                            <!-- Textbox -->
                            <TextBox Grid.Column="1"
                                 Text="{Binding NodeData.Title, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 FontSize="12"
                                 Margin="5"
                                 BorderThickness="1"
                                 Background="Transparent"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />

                            <!-- Rechter Strich -->
                            <Rectangle Grid.Column="2"
                                   Fill="Black"
                                   Width="6"
                                   HorizontalAlignment="Stretch" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type fc:RhombusNodeControl}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fc:RhombusNodeControl}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Padding="0"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Polygon Fill="White"
                             Stroke="Black"
                             StrokeThickness="1"
                             Points="0.5,0 1,0.5 0.5,1 0,0.5"
                             Stretch="Fill"
                             RenderTransformOrigin="0.5,0.5"/>
                            <TextBox Text="{Binding NodeData.Title, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontSize="12"
                                      Margin="10"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:fc="clr-namespace:NodeControlPrototype.Controls">
    <Style TargetType="{x:Type fc:SequenceNodeControl}">
        <Setter Property="Background" Value="#84A9C0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fc:SequenceNodeControl}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">
                        <TextBox x:Name="tbNodeCode" Text="{Binding NodeData.Title, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                                 Background="{TemplateBinding Background}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type fc:TerminalNodeControl}">
        <Setter Property="Background" Value="LightGreen" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fc:TerminalNodeControl}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="30"
                        Margin="10">
                        <StackPanel>
                            <!-- Dropdown: Start oder End -->
                            <ComboBox SelectedValue="{Binding TerminalType, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      SelectedValuePath="Content"
                                  HorizontalAlignment="Center"
                                  Width="100"
                                      x:Name="cmbType"
                                      Margin="4">
                                <ComboBoxItem Content="Start"/>
                                <ComboBoxItem Content="End"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal">
                                <!-- Rückgabevariable, nur sichtbar wenn "Start" -->
                                <Label x:Name="lblFunctionName" Visibility="Visible" Margin="4">Function Name:</Label>
                                <TextBox x:Name="FunctionNameBox" Margin="4"
     Text="{Binding FunctionName, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
     Width="100"
         BorderThickness="1"
     HorizontalAlignment="Center"
     Visibility="Visible"
     FontSize="12">
                                </TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <!-- Eingabevariablen, nur sichtbar wenn "Start" -->
                                <Label x:Name="lblInputVariables" Visibility="Visible" Margin="4">Input Variables:</Label>
                                <TextBox x:Name="InputVariablesTextBox"
                                 Text="{Binding InputVariables, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 Width="100"
                                     BorderThickness="1"
                                 HorizontalAlignment="Center"
                                 Visibility="Visible"
                                 FontSize="12" Margin="4" >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <!-- Rückgabevariable, nur sichtbar wenn "End" -->
                                <Label x:Name="lblReturnVariable" Visibility="Hidden"  Margin="4">Return Variable:</Label>
                                <TextBox x:Name="ReturnVariableBox"
                                 Text="{Binding ReturnVariable, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 Width="100"
                                     BorderThickness="1"
                                 HorizontalAlignment="Center"
                                 Visibility="Hidden"
                                 FontSize="12"  Margin="4">
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding TerminalType, RelativeSource={RelativeSource TemplatedParent}}" Value="End">
                            <Setter TargetName="ReturnVariableBox" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding TerminalType, RelativeSource={RelativeSource TemplatedParent}}" Value="Start">
                            <Setter TargetName="ReturnVariableBox" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


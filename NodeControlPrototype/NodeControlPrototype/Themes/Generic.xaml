<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:fc="clr-namespace:NodeControlPrototype">
    <Style TargetType="{x:Type fc:RectangleNodeControl}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fc:RectangleNodeControl}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">
                        <TextBox x:Name="tbNodeCode" Text="{Binding NodeData.Title, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type fc:TerminatorNodeControl}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fc:TerminatorNodeControl}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="30"
                        Padding="5">
                        <StackPanel>
                            <!-- Dropdown: Start oder End -->
                            <ComboBox SelectedValue="{Binding TerminalType, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      SelectedValuePath="Content"
                                  HorizontalAlignment="Center"
                                  Width="100"
                                  Margin="0,0,0,3" >
                                <ComboBoxItem Content="Start"/>
                                <ComboBoxItem Content="End"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal">
                                <!-- Rückgabevariable, nur sichtbar wenn "Start" -->
                                <Label x:Name="lblFunctionName" Visibility="Visible">Function Name:</Label>
                                <TextBox x:Name="FunctionNameBox"
     Text="{Binding FunctionName, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
     Width="100"
         BorderThickness="1"
     HorizontalAlignment="Center"
     Visibility="Visible"
     FontSize="12">
                                </TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <!-- Rückgabevariable, nur sichtbar wenn "End" -->
                                <Label x:Name="lblReturnVariable" Visibility="Hidden">Return Variable:</Label>
                                <TextBox x:Name="ReturnVariableBox"
                                 Text="{Binding ReturnVariable, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 Width="100"
                                     BorderThickness="1"
                                 HorizontalAlignment="Center"
                                 Visibility="Hidden"
                                 FontSize="12">
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding TerminalType, RelativeSource={RelativeSource TemplatedParent}}" Value="End">
                            <Setter TargetName="ReturnVariableBox" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding TerminalType, RelativeSource={RelativeSource TemplatedParent}}" Value="Start">
                            <Setter TargetName="ReturnVariableBox" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


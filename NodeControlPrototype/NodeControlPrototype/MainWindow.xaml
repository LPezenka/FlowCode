<Window x:Class="NodeControlPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeControlPrototype"
        xmlns:fc="clr-namespace:NodeControlPrototype;assembly=NodeControlPrototype"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800">

    <Window.Resources>
        <DrawingBrush x:Key="ListBackgroundBrush" Viewport="0,0,100,100" ViewportUnits="Absolute" TileMode="Tile">
            <DrawingBrush.Drawing>
                <DrawingGroup>

                    <!-- Geometry for the 10px squares -->
                    <GeometryDrawing Brush="White">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <PathGeometry  Figures="
                  M10,0 L10,100 
                  M20,0 L20,100
                  M30,0 L30,100 
                  M40,0 L40,100
                  M50,0 L50,100 
                  M60,0 L60,100
                  M70,0 L70,100 
                  M80,0 L80,100
                  M90,0 L90,100

                  M0,10 L100,10 
                  M0,20 L100,20
                  M0,30 L100,30 
                  M0,40 L100,40
                  M0,50 L100,50 
                  M0,60 L100,60
                  M0,70 L100,70 
                  M0,80 L100,80
                  M0,90 L100,90"  />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Thickness="0.25" Brush="LightGray" />
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>

                    <!-- Geometry for the 100px squares -->
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <PathGeometry  Figures="M0,0 L100,0 L100,100" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Thickness="1" Brush="LightGray" />
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>

                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Resources>
    
    <Grid>
        <Canvas x:Name="DiagramCanvas" Background="{StaticResource ListBackgroundBrush}">
            <StackPanel>
                <Button
                Width="92" Height="92"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Click="AddNode_Click"
                    

                    >
                    <Image Source="/res/process.png"/>
                </Button>
                <Button
    Width="92" Height="92"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Margin="10"
    Click="AddDecisionNode_Click">
                    <Image Source="/res/decision.png"/>
                </Button>

                <Button
    Width="92" Height="92"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Margin="10"
    Click="AddFunctionNode_Click">
                    <Image Source="/res/predefinedprocess.png"/>
                </Button>
                <!--<Button Width="92" Height="92"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="10" Click="Button_Click">
                    <Image Width="92" Height="92" Source="/res/compile.png"/>
                </Button>-->
                <Button Width="92" Height="92"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="10" Click="Run_Click">
                    <Image Width="92" Height="92" Source="/res/Play.jpg" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
